/* pages/search/search.wxss */
.search{
  padding: 1rem 0;
  display: flex;
  justify-content: space-around;
  background: #eee;
}
.search .sou{
  border:1px solid #aaa;
  padding: 0.3rem;
  border-radius: 4px;
  background: #fff;
}
/* 背景图片部分 */
.bg{
  width:400px;
  height:173px;
  background-size:cover; 
}
 .img image{
  width:100px;
  height: 100px;
  border-radius: 5%;
  
}
.img{
  background: rgba(0,0,0,0.5);
  width:100%;
  height:86%;
  padding: 3%;
  color:#fff;
}
.font{
  font-size: 15px;
}
.font text{
  margin-right:20px; 
}
/*全部*/
.all{
  padding:1rem; 
  margin-top: 1rem;
  color: red;
  background: #eee;
  font-size:15px;
}
/*评论区*/
.plq{
   padding: 1rem 0; 
  border-bottom: 10px solid #ddd;
}
.pro{
  padding:0.2rem 0.6rem;
  display: flex;
  justify-content: flex-start; 
}
.pro image{
    width:50px;
    height:50px;
    border-radius: 50%;
}
.pro .text{
  display: flex;
  flex-direction:column; 
  margin-left: 3%;
  justify-content: space-between;
}
.pro .text .time{
  color:#aaa;
  font-size:15px; 
}
.pl{
  padding: 0.3rem 0.6rem;
  display: flex;
  flex-direction: column;
}
.pl .detail{
  font-size:15px;
  color:#aaa;
  margin: 0.3rem 0; 
}
.icon{
  border-top:1px solid #ddd;
  padding: 0.2rem 0.6rem;
  display: flex;
  justify-content: space-around;
}
.icon .iconfont{
  font-size:30px;
  color: #aaa;
}

.icon .iconfont text{
  font-size:15px;
   margin-left:5px;
     
}
/*评论区*/
.comment{
  padding: 1rem;
  background: rgba(0,0,0,0.5);
  position: fixed;
  top:20%;
  left: 5%;
  width:80%;
  color:#fff;
  
}
.place{
  font-size:15px;
  color:#fff;
}
textarea{
  padding: 1rem;
  width:100%;
  height:100px;
  margin:auto;
}
.btn{
  padding: 0.5rem;
  display: flex;
  justify-content: space-between;
  color:#fff;
}
/*搜索出来的内容  */
.search_hidden{
  padding: 0.3rem 0.6rem;
  display: flex;
  flex-direction: column;
  position: fixed;
  
}
.search_hidden .h2{
  font-weight: bold;
  margin:1rem 0;
}
